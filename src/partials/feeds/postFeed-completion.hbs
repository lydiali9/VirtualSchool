<div class="feed-column">
  <div class="row">
    <div class="feed-status">
      <div class="avatar"></div>
      <span class="vertical-line"></span>
    </div>
    <div class="feed-content">
      <div class="row">
        <div class="column shrink featured-img" data-imagizer>
          <img src="{{data.img}}" alt=""/>
        </div>
        <div class="columns feed-content">
          <div class="feed-title">
            <h4 class="title"><strong>Course {{@index}}: </strong>{{data.title}}</h4>
          </div>
          <div class="content">
            <h4 class="description-heading"></h4>
            <h5 class="description">{{data.description}}</h5>
          </div>
        </div>
      </div>
    </div>
    <div class="feed-specs">
      <h5 class="specs">{{data.length}} min</h5>
    </div>
  </div>
</div>
