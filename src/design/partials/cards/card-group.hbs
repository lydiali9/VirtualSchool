<div class="card card-group" card-type="{{type}}">
    {{#compare type "card-simple" operator="=="}}
      {{#each data}}
        {{> postCard-simple data=(lookup ../learningPaths this)}}
      {{/each}}
    {{/compare}}
    {{#compare type "card-deck" operator="=="}}
      {{#each data}}
        {{> postCard-deck data=(lookup ../learningPaths this)}}
      {{/each}}
    {{/compare}}
    {{#compare type "card" operator="=="}}
      {{#each data}}
        {{> postCard data=(lookup ../learningPaths this)}}
      {{/each}}
    {{/compare}}
</div>
